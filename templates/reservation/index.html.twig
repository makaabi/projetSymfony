{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dater</th>
                <th>Etat</th>
                <th>Client</th>
                <th>Service</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.dater ? reservation.dater|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.etat }}</td>
                <td>{{ reservation.client }}</td>
                <td>{{ reservation.service }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'client': reservation.client}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'client': reservation.client}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">Create new</a>
{% endblock %}
