<form method="post" action="{{ path('service_delete', {'id_service': service.id_service}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id_service) }}">
    <button class="btn">Delete</button>
</form>
